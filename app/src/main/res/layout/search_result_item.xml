<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/outLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loading"
    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:id="@+id/resultItemLayout"
        android:layout_alignParentBottom="true"
        >
        <!--
            <com.sorry.stalker.widget.TopCropImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/testimg"
                android:scaleType="matrix" />-->
        <ImageView
            android:id="@+id/imageBlur"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorImageMask"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:clickable="false"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:id="@+id/showName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="绿箭侠"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="@color/colorName"
                    android:clickable="false"
                    android:singleLine="true"
                    android:maxWidth="250dp"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/showEngName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="ARROW"
                    android:textSize="9sp"
                    android:textColor="@color/colorName"
                    android:clickable="false"
                    android:singleLine="true"
                    />
                <TextView
                    android:id="@+id/showInfor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="RETURNING SERIES  "
                    android:textSize="9sp"
                    android:textColor="@color/colorName"
                    android:clickable="false"
                    android:layout_marginTop="12dp"

                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/showDetial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/testlong"
                    android:textSize="10sp"
                    android:textColor="@color/colorName"
                    android:clickable="false"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:maxLines="4"
                    android:ellipsize="end"
                    android:lineSpacingExtra="6dp"/>
                <Button
                    android:id="@+id/checkBoxButton"
                    android:layout_width="60dp"
                    android:layout_height="22dp"
                    android:scaleType="centerInside"
                    android:background="@mipmap/ic_add_black"
                    android:text="ADD   "
                    android:textAlignment="viewEnd"
                    android:gravity="end|center_vertical"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"/>

            </LinearLayout>
    </FrameLayout>

    </RelativeLayout>