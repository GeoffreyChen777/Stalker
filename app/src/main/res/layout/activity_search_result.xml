<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/searchResultLayout"
    tools:context=".activity.SearchResultActivity"
    android:background="@color/colorBackground"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/search_result_background"
        android:scaleType="centerCrop"/>
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avloadingIndicatorView"
        android:layout_centerInParent="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="visible"
        app:indicator="LineScalePulseOutRapid"
        app:indicator_color="@color/colorWhite"
    />
    <com.sorry.stalker.widget.SearchResultToolbar
        android:id="@+id/search_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/searchResltActivityLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_toolbar"
        >
        <ScrollView
            android:id="@+id/searchResltList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:background="@null">
            <RelativeLayout
                android:id="@+id/searchResltLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null">
                <LinearLayout
                    android:id="@+id/searchResltListLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@null"
                    >
                </LinearLayout>
            </RelativeLayout>

        </ScrollView>
    </LinearLayout>

</RelativeLayout>
