<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    >
    <ImageView
        android:id="@+id/mainImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/hold"
        android:scaleType="centerCrop"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorMainImageMask"/>

    <TextView
        android:id="@+id/mainName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:textSize="17sp"
        android:textColor="@color/colorName"
        android:clickable="false"
        android:textStyle="bold"

        android:text="绿箭侠"/>
    <TextView
        android:id="@+id/mainEngName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/mainName"
        android:text="ARROW"
        android:textSize="9sp"
        android:textColor="@color/colorName"
        android:clickable="false"
        />
    <TextView
        android:id="@+id/mainShowStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@id/mainEngName"
        android:text="RETURN SERIES"
        android:textSize="10sp"
        android:textColor="@color/colorName"
        android:clickable="false"
        />

    <TextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="DAY"
        android:layout_marginTop="125dp"
        android:layout_marginRight="-2dp"

        android:layout_marginLeft="-5dp"
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorWhite"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/mainDayNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:layout_marginTop="-30dp"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_toLeftOf="@id/day"
        android:textColor="@color/colorWhite"
        android:visibility="invisible"
        />

    <RelativeLayout
        android:id="@+id/mainOptionLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorMainImageMaskDark"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <Button
            android:id="@+id/mainStar"
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_star"
            android:layout_marginLeft="100dp"
            android:text="    置顶"
            android:textSize="12sp"
            android:textColor="@color/colorBlack"
            />

        <Button
            android:id="@+id/mainDelete"
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_delete"
            android:layout_marginRight="100dp"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:text="    删除"
            android:textColor="@color/colorBlack"/>
    </RelativeLayout>

</RelativeLayout>